.share_top{background:#fff; padding:0 20rpx; position:relative; overflow: hidden; height:0;  -webkit-box-sizing: border-box;  box-sizing: border-box; -webkit-transition:all .3s; -o-transition:all .3s; transition:all .3s; opacity: 0;}
.share_top .logo{width:120rpx; height:120rpx; float:left; margin-right:20rpx; font-size:0;}
.share_top .logo .img{width:100%; height:100%}
.share_top .down_btn{display:inline-block; width:160rpx; height:64rpx; line-height:64rpx; text-align: center; background:#ff5555; border-radius:10rpx; color:#fff; font-size:28rpx; float:right; margin-top:35rpx; margin-left:20rpx;}
.share_top .info{overflow:hidden; color:#333;}
.share_top .info .h3{font-size:36rpx; margin-bottom:10rpx;}
.share_top .info .p{font-size:28rpx; line-height:34rpx;}
.share_top .close_btn{display:inline-block; width:114rpx; height:114rpx; background:#999999; position:absolute; top:-70rpx; right:-60rpx; border-radius:100%;}
.share_top .close_btn .icons{content:''; display:inline-block; width:30rpx; height:30rpx; background-position:-130rpx -60rpx; position:absolute; bottom:12rpx; left:20rpx;}
.download_show{height:160rpx;  padding:20rpx; opacity: 1;
}

