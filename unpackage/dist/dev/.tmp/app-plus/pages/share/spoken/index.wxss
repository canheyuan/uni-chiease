.spoken_head {
  margin-bottom: 30rpx;
}
.spoken_data {
  height: 570rpx;
  width: 100%;
  text-align: center;
  position: relative;
  z-index: 2;
  background: url(../../static/img/share_bg01.2e38d072.jpg) no-repeat center top;
  background-size: 100% 100%;
}
.spoken_data .title {
  padding-top: 40rpx;
}
.spoken_data .title .h3 {
  font-size: 38rpx;
  color: #fff;
  margin-bottom: 20rpx;
}
.spoken_data .title .p {
  font-size: 30rpx;
  color: #fff;
}
.spoken_data .shadow_bg {
  height: 24rpx;
  width: 100%;
  position: absolute;
  bottom: -24rpx;
  left: 0;
  /*火狐*/
  background: -webkit-linear-gradient(top, rgba(0, 0, 0, 0.3), transparent);
  /*Safari5.1 Chrome 10+*/
}
.spoken_charts {
  width: 550rpx;
  height: 350rpx;
  margin: 30rpx auto 0;
}
.share_user {
  width: 700rpx;
  margin: 0 auto;
  background: #35afff;
  border-bottom-left-radius: 30rpx;
  border-bottom-right-radius: 30rpx;
  padding: 30rpx;
  height: 160rpx;
  -webkit-box-shadow: 6rpx 0 20rpx rgba(53, 175, 255, 0.4);
          box-shadow: 6rpx 0 20rpx rgba(53, 175, 255, 0.4);
}
.share_user .per_img {
  float: left;
  width: 100rpx;
  height: 100rpx;
  border: 4rpx solid #9ad7ff;
  border-radius: 100%;
  overflow: hidden;
  margin-right: 20rpx;
}
.share_user .per_img ._img {
  width: 100%;
  height: 100%;
  border-radius: 100%;
}
.share_user .btn {
  display: inline-block;
  width: 160rpx;
  height: 64rpx;
  line-height: 58rpx;
  text-align: center;
  border: 2rpx solid #fff;
  border-radius: 32rpx;
  color: #fff;
  font-size: 28rpx;
  float: right;
  margin-top: 15rpx;
  margin-left: 20rpx;
}
.share_user .info {
  overflow: hidden;
  padding-top: 5rpx;
}
.share_user .info .h3 {
  font-size: 34rpx;
  color: #fff;
  margin-bottom: 15rpx;
}
.share_user .info .p {
  font-size: 28rpx;
  color: #c1e6ff;
  line-height: 30rpx;
}
.share_user .info .p .yellow {
  color: #fdcf00;
}
.share_user .info .p .ico_money {
  background-position: -100rpx -60rpx;
  width: 30rpx;
  height: 30rpx;
  vertical-align: top;
}
.echarts_box {
  width: 100%;
  height: 1000rpx;
}

