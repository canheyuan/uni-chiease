/*-------- 每日打卡 ---------*/
.punch_head {
  position: relative;
  width: 100%;
}
.punch_head .img {
  width: 100%;
}
.punch_head .tip {
  line-height: 36rpx;
  background: #ffa800;
  font-size: 28rpx;
  color: #fff;
  padding: 15rpx 20rpx;
  position: absolute;
  left: 0;
  top: 0;
  z-index: 9;
  width: 100%;
  display: none;
}
.punch_head .txt {
  position: absolute;
  left: 0;
  top: 60rpx;
  font-size: 56rpx;
  color: #fff;
  width: 100%;
  text-align: center;
  line-height: 80rpx;
  letter-spacing: 6rpx;
  text-shadow: 4rpx 4rpx 4rpx #3e79ff;
}
.punch_head .txt ._span {
  color: #ffc10a;
  font-size: 72rpx;
  line-height: 80rpx;
  letter-spacing: 0;
  vertical-align: top;
  margin-right: 10rpx;
}
.punch_head .btn {
  width: 80%;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  display: block;
  margin: -60rpx auto 20rpx;
  background: #fff;
  border-radius: 50rpx;
  font-size: 34rpx;
  color: #1788d2;
  -webkit-box-shadow: 8rpx 0 60rpx rgba(23, 136, 210, 0.26);
          box-shadow: 8rpx 0 60rpx rgba(23, 136, 210, 0.26);
  position: relative;
  z-index: 9;
}
.punch_head .xxjh_btn {
  font-size: 30rpx;
  color: #777777;
  display: block;
  margin: 0 auto;
  text-align: center;
  line-height: 30rpx;
  padding: 20rpx 0;
}
.punch_head .xxjh_btn .ico_tri {
  width: 30rpx;
  height: 30rpx;
  background-position: 0 -60rpx;
  margin-left: 10rpx;
  vertical-align: top;
}
.punch_data {
  padding: 30rpx 0;
}
.punch_data .li {
    height: 120rpx;
    padding: 15rpx 30rpx;
}
.punch_data .li .em {
      display: inline-block;
      width: 90rpx;
      height: 90rpx;
      background: #ffc10a;
      border-radius: 100%;
      padding: 20rpx;
      float: left;
      margin-right: 20rpx;
}
.punch_data .li .em .icons {
        width: 50rpx;
        height: 50rpx;
}
.punch_data .li .num {
      float: right;
      font-size: 72rpx;
      font-family: Arail;
      font-weight: bold;
      color: #ffc10a;
      line-height: 90rpx;
}
.punch_data .li .p {
      line-height: 90rpx;
      font-size: 34rpx;
      color: #242629;
}
.punch_data .li_date .em {
    -webkit-box-shadow: 6rpx 0 24rpx rgba(247, 157, 0, 0.5);
            box-shadow: 6rpx 0 24rpx rgba(247, 157, 0, 0.5);
    background: #ffc10a;
}
.punch_data .li_date .em .icons {
      background-position: 0 0;
}
.punch_data .li_date .num {
    color: #ffc10a;
}
.punch_data .li_score .em {
    -webkit-box-shadow: 6rpx 0 24rpx rgba(110, 219, 27, 0.5);
            box-shadow: 6rpx 0 24rpx rgba(110, 219, 27, 0.5);
    background: #6edb1b;
}
.punch_data .li_score .em .icons {
      background-position: -50rpx 0;
}
.punch_data .li_score .num {
    color: #6edb1b;
}
.punch_data .li_time .em {
    -webkit-box-shadow: 6rpx 0 24rpx rgba(75, 183, 245, 0.5);
            box-shadow: 6rpx 0 24rpx rgba(75, 183, 245, 0.5);
    background: #4bb7f5;
}
.punch_data .li_time .em .icons {
      background-position: -100rpx 0;
}
.punch_data .li_time .num {
    color: #4bb7f5;
}
.share_btn_box {
  text-align: center;
  margin-top: 40rpx;
}
.share_btn_box ._a {
  display: inline-block;
  width: 140rpx;
  height: 140rpx;
  background: #ffc10a;
  color: #fff;
  border-radius: 100%;
  padding: 20rpx 0;
  -webkit-box-shadow: 8rpx 0 28rpx rgba(233, 140, 0, 0.55);
          box-shadow: 8rpx 0 28rpx rgba(233, 140, 0, 0.55);
  -webkit-transition: all .3s;
  -o-transition: all .3s;
  transition: all .3s;
}
.share_btn_box ._a .ico_share {
  width: 60rpx;
  height: 60rpx;
  background-position: 0 -100rpx;
  margin-bottom: 0.1rpx;
}
.share_btn_box ._a ._span {
  display: block;
  font-size: 26rpx;
}
.share_btn_box ._a:active {
  -webkit-transform: scale(0.9, 0.9);
      -ms-transform: scale(0.9, 0.9);
          transform: scale(0.9, 0.9);
}
/*未能打卡*/
.un_punch .punch_head .img {
  -webkit-filter: grayscale(100%);
  -moz-filter: grayscale(100%);
  filter: grayscale(100%);
}
.un_punch .punch_head .tip {
  display: block;
}
.un_punch .punch_head .btn {
  color: #bebebe;
}
.un_punch .share_btn_box ._a {
  background: #e3e3e3;
  -webkit-box-shadow: none;
          box-shadow: none;
}
.un_punch .share_btn_box ._a:active {
  -webkit-transform: scale(1, 1);
      -ms-transform: scale(1, 1);
          transform: scale(1, 1);
}
/*打卡成功弹窗*/
.punch_pop {
  position: relative;
  width: 750rpx;
  text-align: center;
  margin-bottom: 200rpx;
}
.punch_pop .img {
  width: 100%;
}
.punch_pop .h3 {
  color: #000;
  font-size: 44rpx;
  position: absolute;
  left: 0;
  top: 540rpx;
  width: 100%;
  font-weight: bold;
}
.punch_pop .p {
  color: #777777;
  font-size: 32rpx;
  position: absolute;
  left: 0;
  top: 620rpx;
  width: 100%;
}
.punch_pop .p .span {
  color: #e98c00;
}
.punch_pop .yellow_btn {
  position: absolute;
  top: 700rpx;
  left: 50%;
  margin-left: -220rpx;
  width: 440rpx;
}
.punch_pop .ico_close {
  width: 70rpx;
  height: 70rpx;
  background-position: 0 -170rpx;
  position: absolute;
  top: 70rpx;
  right: 70rpx;
}

